{
  "name": "quiz-service",
  "version": "1.0.0",
  "description": "Service de quiz AICOS utilisant gRPC et Kafka",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest",
    "proto": "grpc_tools_node_protoc --js_out=import_style=commonjs,binary:./src/proto --grpc_out=grpc_js:./src/proto --plugin=protoc-gen-grpc=./node_modules/.bin/grpc_tools_node_protoc_plugin ./src/proto/quiz.proto"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.9.14",
    "@grpc/proto-loader": "^0.7.10",
    "dotenv": "^16.3.1",
    "kafkajs": "^2.2.4",
    "mongoose": "^8.0.3",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "grpc-tools": "^1.12.4",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2"
  }
} 